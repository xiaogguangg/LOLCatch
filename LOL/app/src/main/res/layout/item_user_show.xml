<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@color/white">
        <ImageView
            android:id="@+id/head_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/user_name"
            android:layout_toRightOf="@id/head_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/head_image"
            android:text="gggggggggggggg"
            />
        <TextView
            android:id="@+id/user_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/head_image"
            android:layout_alignBottom="@id/head_image"
            android:layout_below="@id/user_name"
            android:textSize="@dimen/smallText"
            android:text="gggggggggggggg"/>
        <ImageView
            android:id="@+id/user_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_alignLeft="@id/head_image"
            android:layout_below="@id/head_image"/>
        <TextView
            android:id="@+id/user_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_photo"
            android:text="gggggggggggggg"
            android:layout_alignLeft="@id/head_image"/>
    </RelativeLayout>
</RelativeLayout>