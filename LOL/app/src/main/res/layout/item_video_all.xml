<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/all_video_iv"
        android:layout_width="@dimen/activity_entertainment_padding"
        android:layout_height="@dimen/activity_entertainment_padding"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/all_video_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/all_video_iv"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/white"/>

</RelativeLayout>